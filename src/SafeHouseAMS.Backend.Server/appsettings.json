{
  "Okta":{
    "OktaDomain":"https://dev-83399209.okta.com"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },

  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { 
        "Name": "File",
        "Args": 
        {
          "path": "Logs/ams.log",
          "rollingInterval":"Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "LettuceEncrypt": {
    "AcceptTermsOfService": true,
    "AllowedChallengeTypes": "Http01",
    "DomainNames": [ "ams-api.dev-maca.ca" ],
    "EmailAddress": "zetroot@gmail.com"
  }
}
