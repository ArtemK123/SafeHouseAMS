@using SafeHouseAMS.BizLayer.LifeSituations.Records

@if (Record is null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                <RadzenLabel Text="Нет информации о детях"/>
            </div>
        </div>
    </div>
}
else
{
    @if (Record?.HasChildren == true)
    {
        <div class="row">
            <div class="col-md-12">
                <RadzenLabel Text="Есть дети"/>
            </div>
        </div>
        if (!string.IsNullOrWhiteSpace(Record?.Details))
        {
            <div class="row text-muted">
                <div class="col-md-12">
                    <RadzenLabel Text="@Record?.Details"/>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <RadzenLabel Text="Детей нет" />
        </div>
    }
}

@code {
    [Parameter] public ChildrenRecord? Record { get; set; }
}
